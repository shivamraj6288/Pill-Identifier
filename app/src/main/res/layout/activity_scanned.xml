<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".ScannedActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/goToScan"
        android:text="Scanned Images"
        android:textColor="#FFF"
        app:layout_constraintHorizontal_bias="0.1"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/goToScan"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/goToScan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:outlineSpotShadowColor="#353434"
        android:elevation="10dp"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="#D172E1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:text="Scan"
               android:textColor="#FFF"
               android:gravity="fill"
               android:textAlignment="gravity"
               android:textSize="30sp"
               android:textStyle="bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/goToScan"
        android:id="@+id/scannedImagesRecycler"/>

</androidx.constraintlayout.widget.ConstraintLayout>
